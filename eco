import telebot
import random

# --- –¢–≤–æ–π —Ç–æ–∫–µ–Ω (–∑–∞–º–µ–Ω–∏ –Ω–∞ —Å–≤–æ–π) ---
TOKEN = ""

bot = telebot.TeleBot(TOKEN)

# --- –°–ø–∏—Å–æ–∫ —Å–æ–≤–µ—Ç–æ–≤ ---
eco_tips = [
    "–ò—Å–ø–æ–ª—å–∑—É–π –º–Ω–æ–≥–æ—Ä–∞–∑–æ–≤—É—é –±—É—Ç—ã–ª–∫—É –≤–º–µ—Å—Ç–æ –ø–ª–∞—Å—Ç–∏–∫–æ–≤–æ–π üíß",
    "–í—ã–∫–ª—é—á–∞–π —Å–≤–µ—Ç, –∫–æ–≥–¥–∞ –≤—ã—Ö–æ–¥–∏—à—å –∏–∑ –∫–æ–º–Ω–∞—Ç—ã üí°",
    "–°–¥–∞–≤–∞–π –±–∞—Ç–∞—Ä–µ–π–∫–∏ –∏ –ª–∞–º–ø–æ—á–∫–∏ –≤ —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–µ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã üîã",
    "–°–æ—Ä—Ç–∏—Ä—É–π –º—É—Å–æ—Ä: –ø–ª–∞—Å—Ç–∏–∫, —Å—Ç–µ–∫–ª–æ, –±—É–º–∞–≥–∞ ‚ôªÔ∏è",
    "–ë–µ—Ä–∏ —Å —Å–æ–±–æ–π —Ç–∫–∞–Ω–µ–≤—É—é —Å—É–º–∫—É –≤ –º–∞–≥–∞–∑–∏–Ω üõç"
]
problem =  [
    "–ó–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –≤–æ–∑–¥—É—Ö–∞",
    "–ó–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –≤–æ–¥", 
    "–ó–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –ø–æ—á–≤",
    "–ù–∞–∫–æ–ø–ª–µ–Ω–∏–µ —Ç–≤—ë—Ä–¥—ã—Ö –æ—Ç—Ö–æ–¥–æ–≤",
    "–ü–ª–∞—Å—Ç–∏–∫–æ–≤–æ–µ –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ",
    "–°–Ω–∏–∂–µ–Ω–∏–µ –±–∏–æ—Ä–∞–∑–Ω–æ–æ–±—Ä–∞–∑–∏—è",
    "–ö–∏—Å–ª–æ—Ç–Ω—ã–µ –æ—Å–∞–¥–∫–∏",
    "–†–∞–∑—Ä—É—à–µ–Ω–∏–µ –æ–∑–æ–Ω–æ–≤–æ–≥–æ —Å–ª–æ—è",
    "–®—É–º–æ–≤–æ–µ –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ",
    "–°–≤–µ—Ç–æ–≤–æ–µ –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ"
]

@bot.message_handler(commands=['start'])
def start(message):
    bot.send_message(
        message.chat.id,
        "–ü—Ä–∏–≤–µ—Ç! üå± –Ø —Ç–≤–æ–π –≠–∫–æ–ë–æ—Ç.\n"
        "–Ø –ø–æ–¥—Å–∫–∞–∂—É, –∫–∞–∫ –±–µ—Ä–µ—á—å –ø—Ä–∏—Ä–æ–¥—É!\n\n"
        "–ù–∞–ø–∏—à–∏ /sovet —á—Ç–æ–±—ã –ø–æ–ª—É—á–∏—Ç—å —ç–∫–æ–ª–æ–≥–∏—á–Ω—ã–π —Å–æ–≤–µ—Ç."
    )


@bot.message_handler(commands=['sovet'])
def sovet(message):
    tip = random.choice(eco_tips)
    bot.send_message(message.chat.id, "üí° –°–æ–≤–µ—Ç:\n" + tip)

@bot.message_handler(commands=['problems'])
def send_problems(message):
    problems_text = """–ü—Ä–æ–±–ª–µ–º—ã –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏—è –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥—ã:

1. –ó–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –≤–æ–∑–¥—É—Ö–∞
2. –ó–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –≤–æ–¥
3. –ó–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –ø–æ—á–≤
4. –ù–∞–∫–æ–ø–ª–µ–Ω–∏–µ —Ç–≤—ë—Ä–¥—ã—Ö –æ—Ç—Ö–æ–¥–æ–≤
5. –ü–ª–∞—Å—Ç–∏–∫–æ–≤–æ–µ –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ
6. –°–Ω–∏–∂–µ–Ω–∏–µ –±–∏–æ—Ä–∞–∑–Ω–æ–æ–±—Ä–∞–∑–∏—è
7. –ö–∏—Å–ª–æ—Ç–Ω—ã–µ –æ—Å–∞–¥–∫–∏
8. –†–∞–∑—Ä—É—à–µ–Ω–∏–µ –æ–∑–æ–Ω–æ–≤–æ–≥–æ —Å–ª–æ—è
9. –®—É–º–æ–≤–æ–µ –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ
10. –°–≤–µ—Ç–æ–≤–æ–µ –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ"""
    
    bot.send_message(message.chat.id, problems_text)

@bot.message_handler(func=lambda m: True)
def echo(message):
    bot.send_message(message.chat.id, "–ù–∞–ø–∏—à–∏ /sovet —á—Ç–æ–±—ã –ø–æ–ª—É—á–∏—Ç—å —Å–æ–≤–µ—Ç üåø")


print("–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω... –ù–∞–∂–º–∏ Ctrl+C –¥–ª—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∏.")
bot.polling(none_stop=True)
