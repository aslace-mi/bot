@bot.message_handler(commands=['sovet'])
def sovet(message):
    tip = random.choice(eco_tips)
    bot.send_message(message.chat.id, "๐ก ะญะบะพัะพะฒะตั:\n\n" + tip + "\n\nโจ ะะฐะถะดัะน ะผะฐะปะตะฝัะบะธะน ัะฐะณ ะฒะฐะถะตะฝ! ๐")

